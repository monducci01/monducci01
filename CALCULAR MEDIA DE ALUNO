#include <stdio.h>
int main(){
	float media, nota1, nota2, nota3;
	
	printf("Nota da primeira avaliacao:\n");
	scanf("%f", &nota1);
	printf("Nota da segunda avaliacao:\n");
	scanf("%f", &nota2);
	printf("Nota da terceira avaliacao:\n");
	scanf("%f", &nota3);
	
	media = (nota1 + nota2 + nota3) / 3;
	
	printf("Media anual: %.3f\n", media);
	if (media >= 7.0){
		printf("Resultado: aprovado\n");
		scanf("%f", media);
		}
	else (media < 7.0);{
		printf("Resultado: Reprovado\n");
		scanf("%f", media);
		}  
	return 0; 
}
