#include <stdio.h>

int main() {
//(CRIADO POR MIM MESMO POREM EXPLICADO COM AJUDA DE IA)
    double raio; // double para indicar numero decimal
    double area, borda;
    const double PI = 3.14; //const para indicar que a variavel n√£o pode ser alterada
    
	printf("Digite o raio do adesivo: "); //printf para imprimir
    scanf("%lf", &raio); //%lf para ler o double //% significa "guardar valor digitado dentro dessa variavel"
    area = PI * raio * raio; //formula matematica
    borda = 2 * PI * raio; //formula matematica
    
	printf("\nMaterial necessario (area): %.2lf\n", area);
    printf("Comprimento da borda: %.2lf\n", borda);
    return 0;
}
